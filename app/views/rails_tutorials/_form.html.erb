<%= form_with(model: rails_tutorial) do |form| %>
  <% if rails_tutorial.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(rails_tutorial.errors.count, "error") %> prohibited this rails_tutorial from being saved:</h2>

      <ul>
        <% rails_tutorial.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :first_name, style: "display: block", class:"form-label" %>
